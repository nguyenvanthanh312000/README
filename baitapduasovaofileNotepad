#include <stdio.h>

int main()
{
	FILE *f; //khai bao con tro file
	f = fopen("E:/baitap/VD1.txt","w"); // mo file de ghi su dung duong dan tuyet doi	
	if(f==NULL)
		printf("Err!");
	else
	{
		int n,m;
		printf("Nhap N va M: ");
		scanf("%d%d", &n,&m);
		fprintf(f,"%d\t%d",n,m); //ghi so N vao file
		fclose(f);
	}
}

// nhap mang N : 
// dong 1 so luong 
// dong 2 gia tri
#include <stdio.h>

int main()
{
	FILE *f; //khai bao con tro file
	f = fopen("E:/baitap/VD1.txt","w"); // mo file de ghi su dung duong dan tuyet doi	
	if(f==NULL)
		printf("Err!");
	else
	{
		int n, a[20];
		printf("Nhap n: ");
		scanf("%d",&n);
		fprintf(f,"%d\n",n); //ghi so N vao file
		for(int i=0;i<n;i++)
		{
			printf("a[%d] = ",i);
			scanf("%d",&a[i]);
			fprintf(f, "%d\t",a[i]);
		}
		fclose(f);
	}
}
